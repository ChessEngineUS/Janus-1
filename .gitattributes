# Auto detect text files and perform LF normalization
* text=auto

# Source code
*.py text eol=lf
*.sh text eol=lf
*.bat text eol=crlf
*.ps1 text eol=crlf

# Configuration files
*.json text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.toml text eol=lf
*.cfg text eol=lf
*.ini text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf
*.rst text eol=lf

# Jupyter notebooks
*.ipynb text eol=lf linguist-documentation

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.gz binary
*.tar binary

# Archives
*.7z binary
*.jar binary
*.rar binary
*.zip binary
*.gz binary
*.bz2 binary
*.xz binary
*.tar binary
*.tgz binary

# Export ignore
.gitattributes export-ignore
.gitignore export-ignore
.github export-ignore
tests export-ignore
docs export-ignore
examples export-ignore